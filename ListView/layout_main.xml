<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XML Layout\nWondersActivity\n(simple_list_item_1)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLV2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic Layout\nWondersDLActivity\n(simple_list_item_1)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLV3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic Layout\nWondersDLActivity\n(simple_list_item_single_choice)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLV4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic Layout\nWondersDLActivity\n(simple_list_item_multiple_choice)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLV5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic Layout\nWondersDLActivity\n(simple_list_item_checked)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLV6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic Layout\nWondersDLActivity\n(simple_list_item_2)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLV7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic Layout\nDepartmentDLActivity\n(TextFilterEnabled)"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnLV8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic Layout\nWondersDLActivity\n(MyListView)"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>